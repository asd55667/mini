page {
  height: 100%;
}
.category {
  height: 100%;
}
.category .cats_index {
  height: calc(100vh - 90rpx);
  display: flex;
}
.category .cats_index .menu {
  flex: 2;
}
.category .cats_index .menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.category .cats_index .menu .active {
  color: var(--themeColor);
  border-left: 5px solid currentColor;
}
.category .cats_index .content {
  flex: 5;
}
.category .cats_index .content .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.category .cats_index .content .goods_group .goods_title .delimeter {
  color: #ccc;
  padding: 0 10rpx;
}
.category .cats_index .content .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.category .cats_index .content .goods_group .goods_list navigator {
  width: 33.33%;
  text-align: center;
}
.category .cats_index .content .goods_group .goods_list navigator image {
  width: 50%;
}
