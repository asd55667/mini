<!--pages/category/index.wxml-->
<!-- <text>pages/category/index.wxml</text> -->

<view class="category">
  <search_input></search_input>

  <view class="cats_index">
      <!-- ^left -->
      <scroll-view scroll-y="{{true}}" class="menu">
        <view class="menu_item {{index===cur_idx ? 'active' : ''}}" 
        wx:for="{{menuList}}" wx:key="*this" bindtap="handle_item_tap" data-index="{{index}}">
          {{item}}
        </view>
      </scroll-view>
      <!-- $left -->

      <!-- ^right -->
      <scroll-view scroll-top="{{scroll_top}}" scroll-y="{{true}}" class="content">
        <view class="goods_group" 
        wx:for="{{contentList}}" wx:for-index="index1" wx:for-item="item1" wx:key="cat_name">
          <view class="goods_title">
            <text class="delimeter">/</text>
            <text class="title">{{item1.cat_name}}</text>
            <text class="delimeter">/</text>
          </view>
          <view class="goods_list">
            <navigator  wx:for="{{item1.children}}" 
            wx:for-index="index2" wx:for-item="item2" wx:key="cat_id" url="/pages/goods_list/index?cid={{item2.cat_id}}">
              <image mode="widthFix" src="{{item2.cat_icon}}" />
              <view class="goods_name">{{item2.cat_name}}</view>
            </navigator>
          </view>
        </view>
      </scroll-view>
      <!-- $right -->
  </view>
</view>
