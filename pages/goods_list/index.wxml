<view class="goods_list">
	<search_input></search_input>
	<Tabs tab_data="{{tab_data}}" bindtabs_change="handle_tabs_change">
		<block wx:if="{{tab_data[0].isActive}}">
			<view class="featured">
				<navigator class="goods_item" wx:for="{{goods_list}}" wx:key="goods_id" url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
					<view class="goods_img_wrap">
						<image mode="widthFix" src="{{item.goods_small_logo ? item.goods_small_logo : 'http://image5.suning.cn/uimg/b2c/newcatentries/0000000000-000000000160455569_1_400x400.jpg' }}" />
					</view>
					<view class="goods_info_wrap">
						<view class="goods_name">{{item.goods_name}}</view>
						<view class="goods_price">Â¥{{item.goods_price}}</view>
					</view>
				</navigator>
			</view>
		</block>
		<block wx:elif="{{tab_data[1].isActive}}">2</block>
		<block wx:elif="{{tab_data[2].isActive}}">3</block>
	</Tabs>
</view>