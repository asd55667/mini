page {
  background-color: #edece8;
}
.user_info_wrap {
  height: 45vh;
  background-color: var(--themeColor);
  overflow: hidden;
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translateX(-50%);
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  margin-top: 40rpx;
  color: #fff;
}
.user_info_wrap .login_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  color: greenyellow;
  border: 1rpx solid greenyellow;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  color: #666;
  padding-bottom: 100rpx;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.user_content .history_wrap {
  background-color: #fff;
  display: flex;
}
.user_content .history_wrap navigator {
  padding: 10rpx;
  flex: 1;
  text-align: center;
}
.user_content .history_wrap navigator .history_num {
  color: var(--themeColor);
}
.user_content .orders_wrap {
  background-color: #fff;
  margin-top: 30rpx;
}
.user_content .orders_wrap .orders-title-wrap {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.user_content .orders_wrap .orders_content {
  display: flex;
}
.user_content .orders_wrap .orders_content navigator {
  padding: 15rpx;
  flex: 1;
  text-align: center;
}
.user_content .orders_wrap .orders_content navigator .iconfont {
  font-size: 40rpx;
  color: var(--themeColor);
}
.user_content .addr_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.user_content .app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}
.user_content .app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .share_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.hover-box {
  position: relative;
  top: 3rpx;
  left: 3rpx;
  box-shadow: 0 0 8px rgba(175, 175, 175, 0.2);
}
