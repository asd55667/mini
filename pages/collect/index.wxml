<Tabs tab_data="{{tab_data}}" bindtabs_change="handleTabsItemChange">
    <view class="collect_main">
        <view class="collect_title">
            <text class="collect_tips" active>All</text>
            <text class="collect_tips">Hot</text>
            <text class="collect_tips">Will be Sold</text>
        </view>
        <view class="collect_content">

            <navigator class="goods_item" wx:for="{{collect}}" wx:key="goods_id" url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
                <view class="goods_img_wrap">
                    <image mode="widthFix" src="{{item.goods_small_logo ? item.goods_small_logo : 'http://image5.suning.cn/uimg/b2c/newcatentries/0000000000-000000000160455569_1_400x400.jpg' }}" />
                </view>
                <view class="goods_info_wrap">
                    <view class="goods_name">{{item.goods_name}}</view>
                    <view class="goods_price">Â¥{{item.goods_price}}</view>
                </view>
            </navigator>


        </view>
    </view>

</Tabs>


